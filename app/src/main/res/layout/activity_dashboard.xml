<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/dashboard_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Dashboard Background"
        android:alpha="1.0" />

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/img_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_page_dashboard"
            android:contentDescription="dashboard" />
    </LinearLayout>

    <!-- Dashboard Content  -->
    <TextView
        android:id="@+id/dashboardTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="14sp"
        android:textStyle="italic"
        android:text="Tip of the Day will appear here"
        android:layout_below="@id/header_bar"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/tip_general"/>



    <!-- Daily Summary (tap to open Weekly Review) -->

    <LinearLayout
        android:id="@+id/card_daily_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/container_general"
        android:layout_below="@+id/dashboardTip">

        <TextView
            android:id="@+id/tv_daily_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today’s Summary"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingBottom="4dp"/>

        <!-- Calories row -->
        <TextView
            android:id="@+id/tv_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 0 kcal (±0)"
            android:textColor="@color/white" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/pb_kcal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            app:trackThickness="8dp"
            android:visibility="gone" />

        <!-- Protein row -->
        <TextView
            android:id="@+id/tv_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein: 0 / 0 g (0%)"
            android:textColor="@color/white"
            android:layout_marginTop="10dp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/pb_protein"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            app:trackThickness="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_workouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workouts: 0 today"
            android:textColor="@color/white"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_graph"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="15dp"
        android:layout_below="@+id/card_daily_summary">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_splits"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center_vertical" />
    </FrameLayout>


    <ImageButton
        android:id="@+id/btn_quick_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottom_nav"
        android:background="@drawable/button_take_quest"
        android:layout_marginBottom="8dp" />

    <!-- Bottom nav -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bg_dashboard"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_shop"
                android:contentDescription="Workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_macro"
                android:contentDescription="Shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_dashboard"
                android:contentDescription="Dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_workout"
                android:contentDescription="Profile" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_user"
                android:contentDescription="Macros" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
