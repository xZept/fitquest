<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@drawable/bg_dashboard">

    <!-- STICKY HEADER  -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/img_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_page_dashboard"
            android:contentDescription="dashboard" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Diary button on the right -->
        <ImageButton
            android:id="@+id/btn_diary"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_diary"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>


    <!-- Scrollable content area  -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_bar"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="120dp">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tip -->
            <TextView
                android:id="@+id/dashboardTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="14sp"
                android:textStyle="italic"
                android:text="Tip of the Day will appear here"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/tip_general" />


            <HorizontalScrollView
                android:id="@+id/summary_scroller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:fadingEdgeLength="0dp"
                android:clipToPadding="true"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/summary_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/card_daily_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@drawable/container_user_info">

                        <TextView
                            android:id="@+id/tv_daily_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today’s Summary"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:paddingBottom="8dp"/>

                        <LinearLayout
                            android:id="@+id/summary_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:id="@+id/col_kcal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:id="@+id/tv_kcal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 / 0 kcal (±0)"
                                    android:textColor="@color/white" />

                                <FrameLayout
                                    android:id="@+id/kcal_ring"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_marginTop="8dp">

                                    <com.google.android.material.progressindicator.CircularProgressIndicator
                                        android:id="@+id/pb_kcal_circle"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:indicatorSize="80dp"
                                        app:trackThickness="7dp"
                                        app:indicatorDirectionCircular="clockwise"
                                        app:showAnimationBehavior="inward"
                                        app:hideAnimationBehavior="outward" />

                                    <TextView
                                        android:id="@+id/tv_kcal_center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="0%"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"
                                        android:textSize="14sp"/>
                                </FrameLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="8dp"
                                android:background="#22FFFFFF" />

                            <LinearLayout
                                android:id="@+id/col_workouts"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:id="@+id/tv_workouts_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Workouts"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_workouts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="50sp"
                                    android:layout_marginTop="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_weekly_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@drawable/container_user_info">

                        <TextView
                            android:id="@+id/tv_weekly_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This Week Period"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:paddingBottom="4dp" />

                        <LinearLayout
                            android:id="@+id/weekly_ranges_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_weekly_range"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="—"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.85"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:paddingBottom="2dp"
                                android:layout_marginStart="25dp"/>

                            <TextView
                                android:id="@+id/tv_weekly_next_range"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Next: —"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.8"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:paddingBottom="8dp"
                                android:layout_marginEnd="25dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/weekly_summary_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:id="@+id/col_weekly_kcal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:id="@+id/tv_weekly_kcal_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Avg: —"
                                    android:textColor="@color/white" />

                                <FrameLayout
                                    android:id="@+id/weekly_kcal_ring"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_marginTop="8dp">

                                    <com.google.android.material.progressindicator.CircularProgressIndicator
                                        android:id="@+id/pb_weekly_kcal_circle"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:indicatorSize="80dp"
                                        app:trackThickness="7dp"
                                        app:indicatorDirectionCircular="clockwise"
                                        app:showAnimationBehavior="inward"
                                        app:hideAnimationBehavior="outward" />

                                    <TextView
                                        android:id="@+id/tv_weekly_kcal_center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="0%"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"
                                        android:textSize="14sp" />
                                </FrameLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="8dp"
                                android:background="#22FFFFFF" />

                            <LinearLayout
                                android:id="@+id/col_weekly_workouts"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:id="@+id/tv_weekly_workouts_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Workouts"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_weekly_workouts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="50sp"
                                    android:layout_marginTop="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_weight_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight history"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="15dp"
                android:background="@drawable/container_general"/>

            <FrameLayout
                android:id="@+id/weight_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/container_graph"
                android:padding="12dp"
                android:gravity="center">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/weightChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_split_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Splits"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="15dp"
                android:background="@drawable/container_general"/>

            <FrameLayout
                android:id="@+id/splits_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/container_graph"
                android:paddingHorizontal="15dp"
                android:paddingTop="12dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_splits"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_gravity="center_vertical" />
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/btn_quick_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottom_nav"
        android:background="@drawable/button_take_quest"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bg_dashboard"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_shop"
                android:contentDescription="Workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_macro"
                android:contentDescription="Shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_dashboard"
                android:contentDescription="Dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_workout"
                android:contentDescription="Profile" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_user"
                android:contentDescription="Macros" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
