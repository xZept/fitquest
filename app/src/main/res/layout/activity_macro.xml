<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden_flanks_bg">

    <!-- Header -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:elevation="8dp"
        app:flexDirection="row"
        app:alignItems="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/header_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_flexGrow="1"
            app:flexDirection="row"
            app:alignItems="center">

            <ImageView
                android:id="@+id/img_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Macro"
                android:src="@drawable/title_page_macro" />
        </com.google.android.flexbox.FlexboxLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/header_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_flexGrow="1"
            app:flexDirection="row"
            app:justifyContent="flex_end">

            <ImageButton
                android:id="@+id/btn_diary"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/icon_diary"
                android:contentDescription="Open Diary"
                android:padding="4dp" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/settings_icon"
                android:contentDescription="Settings" />
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/macroTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/tip_macro"
        android:padding="16dp"
        android:text="Loading macro tip..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/content_bottom_inset"
        app:layout_constraintTop_toBottomOf="@id/macroTip"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column"
            app:alignItems="stretch">

            <!-- Progress area -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/progress_bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:flexDirection="row"
                android:padding="5sp"
                android:background="@drawable/container_user_info"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="space_between">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/progress_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_flexBasisPercent="30%"
                    android:layout_marginStart="25dp"
                    app:layout_flexGrow="1"
                    app:flexDirection="column"
                    app:alignItems="center">

                    <FrameLayout
                        android:id="@+id/calories_circle"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        app:layout_alignSelf="center">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/calories_progress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:trackThickness="10dp"
                            app:trackColor="@color/white_24"
                            app:indicatorColor="@color/progress_ok"
                            app:indicatorSize="100dp"
                            app:indicatorInset="0dp" />

                        <TextView
                            android:id="@+id/calories_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                    </FrameLayout>


                <TextView
                        android:id="@+id/calories_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:layout_margin="8sp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_alignSelf="center" />


                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/progress_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_flexBasisPercent="50%"
                    app:layout_flexGrow="1"
                    android:padding="5sp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginVertical="10dp"
                    app:flexDirection="column"
                    app:alignItems="center">

                    <ProgressBar
                        android:id="@+id/protein_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/protein_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/protein_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Protein (g)"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ProgressBar
                        android:id="@+id/carbs_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/carbs_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/carbs_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Carbohydrate (g)"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ProgressBar
                        android:id="@+id/fat_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fat_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fat_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Fat (g)"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>
            <ImageView
                android:id="@+id/iv_capybara"
                android:layout_width="380dp"
                android:layout_height="92dp"
                android:src="@drawable/capybara_hungry"
                android:contentDescription="Capybara mood"
                android:elevation="20dp"
                app:layout_alignSelf="center" />


            <!-- Meals Section -->
            <LinearLayout
                android:id="@+id/meals_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="0dp">

                <!-- Breakfast title -->
                <TextView
                    android:id="@+id/breakfastText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:paddingVertical="15dp"
                    android:background="@drawable/container_general"/>

                <!-- Breakfast card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/container_fill_breakfast"
                    android:orientation="vertical"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/breakfastScroll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/meal_scroll_height"
                        android:fillViewport="true"
                        android:overScrollMode="never"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/breakfastContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>


                <TextView
                    android:id="@+id/snackText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snack"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:paddingVertical="15dp"
                    android:background="@drawable/container_general" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/container_fill_snack"
                    android:orientation="vertical"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/snackScroll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/meal_scroll_height"
                        android:fillViewport="true"
                        android:overScrollMode="never"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/snackContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>


                <TextView
                    android:id="@+id/lunchText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:paddingVertical="15dp"
                    android:background="@drawable/container_general" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/container_fill_lunch"
                    android:orientation="vertical"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/lunchScroll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/meal_scroll_height"
                        android:fillViewport="true"
                        android:overScrollMode="never"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/lunchContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>

                <TextView
                    android:id="@+id/dinnerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dinner"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:paddingVertical="15dp"
                    android:background="@drawable/container_general" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/container_fill_dinner"
                    android:orientation="vertical"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/dinnerScroll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/meal_scroll_height"
                        android:fillViewport="true"
                        android:overScrollMode="never"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/dinnerContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/btn_buy_food"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/buy_food_size"
        android:background="@drawable/button_buy_food"
        android:contentDescription="Add meal"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_nav_height"
        android:background="@drawable/navigation_bg_macro"
        android:padding="8dp"
        android:elevation="8dp"
        app:flexDirection="row"
        app:justifyContent="space_between"
        app:alignItems="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Workout"
                android:src="@drawable/navigation_shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Shop"
                android:src="@drawable/navigation_macro" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Dashboard"
                android:src="@drawable/navigation_dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Profile"
                android:src="@drawable/navigation_workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Macros"
                android:src="@drawable/navigation_user" />
        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
