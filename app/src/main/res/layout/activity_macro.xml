<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/macro_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden_flanks_bg"
    app:flexDirection="column"
    app:alignItems="stretch"
    app:justifyContent="flex_start"
    tools:context=".MacroActivity">

    <!-- Header -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:alignItems="center"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/img_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Macro"
            android:src="@drawable/title_page_macro" />
    </com.google.android.flexbox.FlexboxLayout>

    <!-- Tip -->
    <TextView
        android:id="@+id/macroTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tip_macro"
        android:gravity="center"
        android:padding="16dp"
        android:text="Loading macro tip..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="italic" />

    <!-- Progress area -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/progress_bars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:alignItems="center"
        app:justifyContent="space_between">

        <!-- Left column -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/progress_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_flexBasisPercent="30%"
            app:layout_flexGrow="1"
            android:padding="5dp"
            app:flexDirection="column"
            app:alignItems="center">

            <ProgressBar
                android:id="@+id/calories_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:layout_alignSelf="center"
                android:indeterminate="false"/>

            <TextView
                android:id="@+id/calories_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Total Calories"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/calories_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Total Calories"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_alignSelf="center" />
        </com.google.android.flexbox.FlexboxLayout>

        <!-- Right column -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/progress_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_flexBasisPercent="50%"
            app:layout_flexGrow="1"
            android:padding="5dp"
            app:flexDirection="column"
            app:alignItems="center">

            <ProgressBar
                android:id="@+id/protein_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/protein_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/protein_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Protein"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/carbs_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/carbs_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/carbs_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Carbohydrate"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/fat_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fat_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fat_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Fat"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <!-- Meal Plan Section -->
    <HorizontalScrollView
        android:id="@+id/meal_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_flexGrow="1">

        <LinearLayout
            android:id="@+id/meal_plan_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Breakfast -->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@drawable/breakfast_container"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/breakfastText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Breakfast"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/breakfastContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </LinearLayout>

            <!-- Snack -->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@drawable/empty_plate_container"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/snackText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Snack"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/snackContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </LinearLayout>

            <!-- Lunch -->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@drawable/lunch_container"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/lunchText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Lunch"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/lunchContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </LinearLayout>

            <!-- Dinner -->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dinner_container"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/dinnerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Dinner"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/dinnerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Add Meal Button -->
    <ImageButton
        android:id="@+id/btn_buy_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_buy_food"
        app:layout_alignSelf="center" />

    <!-- Bottom Navigation -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/navigation_bg_macro"
        android:padding="8dp"
        app:flexDirection="row"
        app:justifyContent="space_between"
        app:alignItems="center">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Workout"
                android:src="@drawable/navigation_shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Shop"
                android:src="@drawable/navigation_macro" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Dashboard"
                android:src="@drawable/navigation_dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Profile"
                android:src="@drawable/navigation_workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Macros"
                android:src="@drawable/navigation_user" />
        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>
</com.google.android.flexbox.FlexboxLayout>
