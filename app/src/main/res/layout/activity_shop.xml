<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shop"
    tools:context=".ShopActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/img_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_page_shop"
            android:contentDescription="Shop" />
    </LinearLayout>

    <!-- Coins badge (top-right) -->
    <ImageView
        android:id="@+id/iv_coin_anim"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignTop="@id/tv_coins_badge"
        android:layout_alignBottom="@id/tv_coins_badge"
        android:layout_toStartOf="@id/tv_coins_badge"
        android:layout_toLeftOf="@id/tv_coins_badge"
        android:contentDescription="Coins" />


    <TextView
        android:id="@+id/tv_coins_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/header_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="0"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ab8105"/>

    <!-- Fixed Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bg_shop"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_shop"
                android:contentDescription="Workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_macro"
                android:contentDescription="Shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_dashboard"
                android:contentDescription="Dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_workout"
                android:contentDescription="Profile" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_user"
                android:contentDescription="Macros" />
        </FrameLayout>
    </LinearLayout>

    <!-- Middle container fills between header and bottom nav -->
    <LinearLayout
        android:id="@+id/middle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_bar"
        android:layout_above="@id/bottom_nav"
        android:orientation="vertical"
        android:weightSum="3">   <!-- was 2 -->

        <!-- Upper area: now 1/3 -->
        <FrameLayout
            android:id="@+id/upper_anim_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.15"
            android:foregroundGravity="center">

            <ImageView
                android:id="@+id/anim_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Shop Animation" />
        </FrameLayout>

        <View
            android:id="@+id/mid_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1F000000" />

        <!-- Lower area: now 2/3 -->
        <FrameLayout
            android:id="@+id/lower_items_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shop_items_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="12dp" />
        </FrameLayout>
    </LinearLayout>


</RelativeLayout>
