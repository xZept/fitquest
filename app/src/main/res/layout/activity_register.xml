<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden_flanks_bg"
    android:id="@+id/registerLayout">

    <!-- Decorative Container Image -->
    <ImageView
        android:id="@+id/imgFormContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:paddingBottom="50dp"
        android:src="@drawable/sign_up_paper" />

    <!-- Title fixed at the top -->
    <TextView
        android:id="@+id/tv_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sign_up_text" />

    <!-- Scrollable form content below the title -->
    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tv_signup_title"
        android:layout_above="@id/btn_register"
        android:layout_marginBottom="24dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="90dp"
            android:gravity="center_horizontal">

            <!-- First Name -->
            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:padding="12dp"
                android:background="@drawable/user_input_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Last Name -->
            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:padding="12dp"
                android:background="@drawable/user_input_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Birthday -->
            <EditText
                android:id="@+id/et_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Birthday"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:background="@drawable/user_input_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:background="@drawable/user_input_bg"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:paddingLeft="12dp"
                android:paddingVertical="24dp"
                android:layout_marginBottom="12dp" />


            <TextView
                android:id="@+id/tv_sex_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Avatar"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/sexSelectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_male"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/sex_container"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/male" />

                <ImageView
                    android:id="@+id/iv_female"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/female"
                    android:scaleType="centerInside"
                    android:background="@drawable/sex_container"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:padding="12dp"
                android:background="@drawable/user_input_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/user_input_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/user_input_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/user_input_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Register Button -->

    <!-- Login Link -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginHorizontal="100dp"
        android:background="@drawable/sign_up_button" />

    <TextView
        android:id="@+id/tv_login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_register"
        android:layout_marginBottom="-105dp"
        android:layout_marginHorizontal="90dp"
        android:text="@string/enter_the_realm"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>
