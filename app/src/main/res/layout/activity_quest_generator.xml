<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_dashboard">


    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Split block with image background -->
        <FrameLayout
            android:id="@+id/split_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/container_split"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/sp_split"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Focus block with image background -->
        <FrameLayout
            android:id="@+id/focus_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/container_focus"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/sp_focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Welcome message bubble -->
    <FrameLayout
        android:id="@+id/welcome_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@drawable/container_text_right"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingBottom="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your quest, adventurer! Pick a split and a focus, then forge your path."
            android:textSize="16sp"
            android:paddingTop="5sp"
            android:layout_gravity="center_vertical"
            android:maxLines="5"
            android:textColor="@android:color/black" />
    </FrameLayout>

    <!-- Actions row -->
    <LinearLayout
        android:id="@+id/actions_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="98dp">

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:contentDescription="Cancel"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@drawable/button_cancel"
            android:padding="0dp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/btn_generate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:contentDescription="Forge quest"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@drawable/button_forge_quest"
            android:padding="0dp" />

    </LinearLayout>

</LinearLayout>