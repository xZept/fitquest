<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/session_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_workout">

    <!-- Main vertical content -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_exercise" />

    <LinearLayout
        android:id="@+id/content_column"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="96dp">
        <!-- paddingBottom ensures content never hides behind bottom bar -->

        <!-- Top half: avatar vs monster + HP bar -->
        <FrameLayout
            android:id="@+id/scene_host"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

            <!-- Monster HP bar -->
            <LinearLayout
                android:id="@+id/hp_bar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="vertical">

                <!-- Background + progress + label stacked -->
                <FrameLayout
                    android:id="@+id/hp_bar_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_hp_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/container_hp_slime"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true" />

                    <!-- progress sits inside the art's inner gutter -->
                    <ProgressBar
                        android:id="@+id/hp_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:max="100"
                        android:progress="100"
                        android:progressTint="#EF4444"
                        android:progressBackgroundTint="#552222" />

                    <!-- HP label over the background -->
                    <TextView
                        android:id="@+id/tv_hp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HP 100/100"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="3" />
                </FrameLayout>
            </LinearLayout>



            <!-- animation -->
            <ImageView
                android:id="@+id/iv_monster"
                android:layout_width="370dp"
                android:layout_height="160dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="16dp"
                android:contentDescription="Monster" />
        </FrameLayout>

        <!-- Bottom panel: current exercise card (actions moved out) -->
        <LinearLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/card_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/container_split_plan_slime" />

                <LinearLayout
                    android:id="@+id/card_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_day_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Push • General"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Barbell Bench Press"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_set_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="25dp"
                        android:paddingTop="4dp"
                        android:text="Set 1 of 5"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/tv_rep_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="8–12 reps"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Sticky bottom bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_complete_set"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/button_complete_set"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/btn_end_session"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/button_quit"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </LinearLayout>

</FrameLayout>
