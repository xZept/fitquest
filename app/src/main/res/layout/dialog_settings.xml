<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_settings"
        android:paddingHorizontal="40dp"
        android:paddingTop="60dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rest Timer"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_timer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            android:hint="e.g., 180 or 3:00"
            app:expandedHintEnabled="false"
            app:hintTextAppearance="@style/FitQuest_HintLabel"
            app:boxStrokeColor="#D1D5DB"
            app:boxBackgroundColor="@android:color/white"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepts seconds (180) or mm:ss (3:00). Range: 15sâ€“20m."
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Equipment"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/equipment_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/equipment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:alignmentMode="alignMargins"
            app:useDefaultMargins="true" />

        <!-- Footer: custom image buttons (inside the same background) -->
        <!-- Footer: Cancel & Save on top row, Logout below -->
        <LinearLayout
            android:id="@+id/footer_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <!-- Top row: Cancel + Save (aligned to end) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Cancel: stays on the left -->
                <ImageButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="96dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_cancel"
                    android:adjustViewBounds="true"
                    android:padding="0dp" />

                <!-- Spacer: expands to push Save to the right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Save: ends up on the right -->
                <ImageButton
                    android:id="@+id/btn_save"
                    android:layout_width="96dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_save"
                    android:contentDescription="Save"
                    android:adjustViewBounds="true"
                    android:padding="0dp" />
            </LinearLayout>


            <!-- Bottom row: Log out (centered below) -->
            <ImageButton
                android:id="@+id/btn_logout"
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_log_out"
                android:adjustViewBounds="true"
                android:padding="0dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
