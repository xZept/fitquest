<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:layout_marginBottom="3dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Header + settings -->

            <!-- Card: User Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_profile_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/settings_icon"
                    android:contentDescription="Settings" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/user_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/tier1_user_info_container">

                <!-- LEFT: profile image / illustration -->
                <ImageView
                    android:id="@+id/iv_profile_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="Profile image"
                    android:src="@drawable/user_icon_male_sprite" />

                    <!-- Left image + Right content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginStart="120dp">

                    <!-- RIGHT: all content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name -->
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="Name: John Doe"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <!-- Row 1: Age & Sex (inline) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:baselineAligned="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Age: 25"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_sex"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:paddingStart="8dp"
                                android:text="Sex: â€”"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <!-- Row 2: Height & Weight (inline like Age/Sex) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <!-- Column: Height -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingEnd="8dp">

                                <TextView
                                    android:id="@+id/label_height"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dp"
                                    android:labelFor="@id/et_height"
                                    android:text="Height"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <EditText
                                    android:id="@+id/et_height"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/bg_edit_text"
                                    android:hint="Enter Height (cm)"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:padding="8dp"
                                    android:textColor="@color/white"
                                    android:textColorHint="#B3FFFFFF"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <!-- Column: Weight -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="8dp">

                                <TextView
                                    android:id="@+id/label_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dp"
                                    android:labelFor="@id/et_weight"
                                    android:text="Weight"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <EditText
                                    android:id="@+id/et_weight"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/bg_edit_text"
                                    android:hint="Enter Weight (kg)"
                                    android:imeOptions="actionDone"
                                    android:inputType="numberDecimal"
                                    android:padding="8dp"
                                    android:textColor="@color/white"
                                    android:textColorHint="#B3FFFFFF"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Card: Activity + Goal (editable with Spinners) -->
            <!-- Fitness container (PNG shows correctly) -->
            <FrameLayout
                android:id="@+id/user_fitness_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/tier1_user_fitness_container">

                <!-- Left image + Right content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <!-- Inline row: Activity Level & Fitness Goal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingHorizontal="12dp"
                        android:baselineAligned="true">

                        <!-- Col 1: Activity Level -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activity Level"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginBottom="6dp" />

                            <Spinner
                                android:id="@+id/sp_activity_level"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_edit_text"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:spinnerMode="dropdown"
                                android:popupBackground="@drawable/bg_spinner_popup"
                                android:dropDownWidth="match_parent"
                                android:dropDownVerticalOffset="8dp" />
                        </LinearLayout>

                        <!-- Col 2: Fitness Goal -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fitness Goal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginBottom="6dp" />

                            <Spinner
                                android:id="@+id/sp_fitness_goal"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_edit_text"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:spinnerMode="dropdown"
                                android:popupBackground="@drawable/bg_spinner_popup"
                                android:dropDownWidth="match_parent"
                                android:dropDownVerticalOffset="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_lady_sprite"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_above="@id/btn_save_profile"
        android:adjustViewBounds="true"
        android:layout_marginBottom="2dp"
        android:contentDescription="@null"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lady_helper_sprite" />

    <ImageButton
        android:id="@+id/btn_save_profile"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_above="@id/bottom_nav"
        android:layout_marginHorizontal="120dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_save"
        android:contentDescription="Save Profile" />

    <!-- Bottom nav -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bg_profile"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_shop"
                android:contentDescription="Workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_macro"
                android:contentDescription="Shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_dashboard"
                android:contentDescription="Dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_workout"
                android:contentDescription="Profile" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_user"
                android:contentDescription="Macros" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>