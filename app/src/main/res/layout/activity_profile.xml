<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page_profile"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/bg_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:focusable="false" />

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/img_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_page_profile"
            android:contentDescription="Profile" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageButton
            android:id="@+id/btn_unlock_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_ticket"
            android:contentDescription="Use Edit Ticket to unlock profile editing"
            android:padding="4dp" />


        <!-- Diary button -->
        <ImageButton
            android:id="@+id/btn_diary"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/icon_diary"
            android:contentDescription="Open Diary"
            android:padding="4dp" />


        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/settings_icon"
            android:contentDescription="Settings" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/profile_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_bar"
        android:layout_above="@id/bottom_nav"
        android:layout_marginBottom="3dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/user_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/container_user_fitness">

                <ImageView
                    android:id="@+id/iv_profile_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Profile image"
                    android:src="@drawable/user_icon_male_sprite" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginStart="120dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="Name: John Doe"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:baselineAligned="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Age: 25"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_sex"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:paddingStart="8dp"
                                android:text="Sex: —"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_fitness_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/container_user_info">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingHorizontal="12dp"
                        android:baselineAligned="true">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activity Level"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginBottom="6dp" />

                            <Spinner
                                android:id="@+id/sp_activity_level"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_edit_text"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:spinnerMode="dropdown"
                                android:popupBackground="@drawable/bg_spinner_popup"
                                android:dropDownWidth="match_parent"
                                android:dropDownVerticalOffset="8dp"
                                android:enabled="false"
                                android:clickable="false"
                                android:focusable="false"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fitness Goal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginBottom="6dp" />

                            <Spinner
                                android:id="@+id/sp_fitness_goal"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_edit_text"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:spinnerMode="dropdown"
                                android:popupBackground="@drawable/bg_spinner_popup"
                                android:dropDownWidth="match_parent"
                                android:dropDownVerticalOffset="8dp"
                                android:enabled="false"
                                android:clickable="false"
                                android:focusable="false"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:paddingHorizontal="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/label_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:labelFor="@id/et_height"
                                android:text="Height"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/et_height"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_edit_text"
                                android:hint="Height (cm)"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:padding="8dp"
                                android:textColor="@color/white"
                                android:textColorHint="#B3FFFFFF"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:longClickable="false"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/label_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:labelFor="@id/et_weight"
                                android:text="Weight"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/et_weight"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_edit_text"
                                android:hint="Weight (kg)"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:padding="8dp"
                                android:textColor="@color/white"
                                android:textColorHint="#B3FFFFFF"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:longClickable="false"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:paddingHorizontal="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/label_bmi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:text="BMI"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_bmi_value"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_edit_text"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="—"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/label_goal_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:text="Goal Weight"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/et_goal_weight"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_edit_text"
                                android:hint="Goal (kg)"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:padding="8dp"
                                android:textColor="@color/white"
                                android:textColorHint="#B3FFFFFF"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:longClickable="false"
                                android:importantForAutofill="no" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_settings_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/container_text_left"
                android:gravity="left"
                android:paddingHorizontal="16dp"
                android:paddingVertical="15dp"
                android:text="Manage rest timer and equipment in Settings"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btn_save_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottom_nav"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_save"
        android:contentDescription="Save Profile" />

    <!-- Bottom nav -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bg_profile"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_shop"
                android:contentDescription="Workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_macro"
                android:contentDescription="Shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_dashboard"
                android:contentDescription="Dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_workout"
                android:contentDescription="Profile" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_user"
                android:contentDescription="Macros" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>