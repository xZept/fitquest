<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Header + settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_profile_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Profile"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Settings"
                    android:src="@drawable/ic_settings" />
            </LinearLayout>

            <!-- Card: User Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- name -->
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Name: John Doe"
                        android:textColor="#111827"
                        android:textSize="30sp" />

                    <!-- Age & Sex inline -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:baselineAligned="true"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Age: 25"
                            android:textColor="#374151"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingStart="8dp"
                            android:text="Sex: â€”"
                            android:textColor="#374151"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Height & Weight inline with labels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_marginBottom="8dp">

                        <!-- Column 1: Height -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/label_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Height"
                                android:textSize="14sp"
                                android:textColor="#111827"
                                android:layout_marginBottom="6dp"
                                android:labelFor="@id/et_height" />

                            <EditText
                                android:id="@+id/et_height"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@android:drawable/edit_text"
                                android:hint="Enter Height (cm)"
                                android:inputType="number"
                                android:padding="8dp"
                                android:textColor="#111827"
                                android:textColorHint="#9CA3AF"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- Column 2: Weight -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/label_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:textSize="14sp"
                                android:textColor="#111827"
                                android:layout_marginBottom="6dp"
                                android:labelFor="@id/et_weight" />

                            <EditText
                                android:id="@+id/et_weight"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@android:drawable/edit_text"
                                android:hint="Enter Weight (kg)"
                                android:inputType="numberDecimal"
                                android:padding="8dp"
                                android:textColor="#111827"
                                android:textColorHint="#9CA3AF"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Activity + Goal (editable with Spinners) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Inline row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="true">

                        <!-- Col 1: Activity Level -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activity Level"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#111827"
                                android:layout_marginBottom="6dp" />

                            <Spinner
                                android:id="@+id/sp_activity_level"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_spinner"
                                android:popupBackground="@drawable/bg_spinner_popup"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:spinnerMode="dropdown"
                                android:dropDownVerticalOffset="8dp"
                                android:dropDownWidth="match_parent"/>
                        </LinearLayout>

                        <!-- Col 2: Fitness Goal -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fitness Goal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#111827"
                                android:layout_marginBottom="6dp" />

                            <Spinner
                                android:id="@+id/sp_fitness_goal"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_spinner"
                                android:popupBackground="@drawable/bg_spinner_popup"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:spinnerMode="dropdown"
                                android:dropDownVerticalOffset="8dp"
                                android:dropDownWidth="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Hint -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage rest timer and equipment in Settings (top right)."
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <ImageButton
        android:id="@+id/btn_save_profile"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_above="@id/bottom_nav"
        android:layout_marginHorizontal="120dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_save"
        android:contentDescription="Save Profile" />

    <!-- Bottom nav -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bg_profile"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_shop"
                android:contentDescription="Workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_macro"
                android:contentDescription="Shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_dashboard"
                android:contentDescription="Dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_workout"
                android:contentDescription="Profile" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_user"
                android:contentDescription="Macros" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>