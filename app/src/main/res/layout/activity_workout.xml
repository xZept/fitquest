<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_workout"
    android:scrollbars="none"
    tools:context=".WorkoutActivity">

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/img_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_page_workout"
            android:contentDescription="Workout" />
    </LinearLayout>

    <!-- Tips -->
    <HorizontalScrollView
        android:id="@+id/tipsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_below="@id/header_bar">

        <LinearLayout
            android:id="@+id/tipsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workoutTip"
                android:layout_width="393dp"
                android:layout_height="80dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="16dp"
                android:text="Workout Tip goes here"
                android:textSize="14sp"
                android:textStyle="italic"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/tip_workout" />

            <TextView
                android:id="@+id/recoveryTip"
                android:layout_width="393dp"
                android:layout_height="80dp"
                android:text="Recovery Tip goes here"
                android:textSize="14sp"
                android:textStyle="italic"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/tip_recovery" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Middle area between Tips and action bar, no special background here -->
    <RelativeLayout
        android:id="@+id/middle_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipsScroll"
        android:layout_above="@id/quest_actions"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/workout_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="68dp"
            android:orientation="horizontal"
            android:gravity="center"/>
    </RelativeLayout>

    <!-- NEW: Action bar with Cancel / Start -->
    <LinearLayout
        android:id="@+id/quest_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_nav"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_cancel_quest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_cancel_quest"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/btn_start_quest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_start_quest"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </LinearLayout>


    <!-- Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bg_workout"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_shop"
                android:contentDescription="Workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_macro"
                android:contentDescription="Shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_dashboard"
                android:contentDescription="Dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_workout"
                android:contentDescription="Profile" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_user"
                android:contentDescription="Macros" />
        </FrameLayout>
    </LinearLayout>

    <!-- Overlay sits on top of content but stops above the bottom nav -->
    <include
        android:id="@+id/overlay_host"
        layout="@layout/view_no_quest_overlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottom_nav" />
</RelativeLayout>
