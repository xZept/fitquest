<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/workout_bg"
    android:scrollbars="none"
    tools:context=".WorkoutActivity">

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/img_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_page_workout"
            android:contentDescription="Workout" />
    </LinearLayout>

    <!-- Tips -->
    <HorizontalScrollView
        android:id="@+id/tipsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_below="@id/header_bar">

        <LinearLayout
            android:id="@+id/tipsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workoutTip"
                android:layout_width="393dp"
                android:layout_height="80dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="16dp"
                android:text="Workout Tip goes here"
                android:textSize="14sp"
                android:textStyle="italic"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/tip_workout" />

            <TextView
                android:id="@+id/recoveryTip"
                android:layout_width="393dp"
                android:layout_height="80dp"
                android:text="Recovery Tip goes here"
                android:textSize="14sp"
                android:textStyle="italic"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/tip_recovery" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Custom button above navigation bar --><!-- Add workout content here (e.g. list of exercises) -->
    <HorizontalScrollView
        android:id="@+id/scroll_workouts"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:paddingTop="28dp"
        android:paddingBottom="2dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:layout_above="@id/btn_start_workout"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="1dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/workout_container"
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            android:orientation="horizontal"
            android:gravity="center" />
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/btn_start_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_nav"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_take_quest"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <!--Navigation-->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bg_workout"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_shop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_shop"
                android:contentDescription="Workout" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_macro"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_macro"
                android:contentDescription="Shop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_dashboard"
                android:contentDescription="Dashboard" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_workout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_workout"
                android:contentDescription="Profile" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/navigation_user"
                android:contentDescription="Macros" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
