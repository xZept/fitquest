<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/container_general"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <!-- Take Again as ImageButton -->

        <ImageButton
            android:id="@+id/btn_take_again"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_take_again" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <!-- Pin as ImageButton with selector -->
        <ImageButton
            android:id="@+id/btn_pin"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/selector_pin"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"

            android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>
