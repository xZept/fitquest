<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused / typing -->
    <item android:state_focused="true" android:drawable="@drawable/bg_user_input_selected"/>

    <!-- Pressed (while tapping) -->
    <item android:state_pressed="true" android:drawable="@drawable/bg_user_input_selected"/>

    <!-- Activated/selected (optional safety for programmatic focus) -->
    <item android:state_activated="true" android:drawable="@drawable/bg_user_input_selected"/>
    <item android:state_selected="true" android:drawable="@drawable/bg_user_input_selected"/>

    <!-- Default -->
    <item android:drawable="@drawable/bg_user_input"/>
</selector>
