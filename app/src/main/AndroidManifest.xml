<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fitquest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".FitQuestApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitQuest.Fullscreen">

        <!-- Launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other screens (inherit the app theme above) -->
        <activity android:name=".RegisterActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".WorkoutActivity" />
        <activity android:name=".WorkoutGeneratorActivity" />
        <activity android:name=".ExerciseActivity" />
        <activity android:name=".MacroActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ShopActivity" />
        <activity android:name=".QuestGeneratorActivity" />
        <activity android:name=".QuestPreviewActivity" />
        <activity android:name=".WorkoutSessionActivity" />
        <activity android:name=".DiaryActivity" />
        <activity android:name=".SessionDetailActivity" />


    </application>

</manifest>